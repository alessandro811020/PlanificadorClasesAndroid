<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_widget"
    android:id="@+id/widget_clases">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/widget_img_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="@string/et_hint_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:id="@+id/widget_textView_nombre"
        android:layout_above="@+id/widget_text_view_clases"
        android:layout_toRightOf="@+id/widget_img_view"
        android:layout_toEndOf="@+id/widget_img_view" />

    <TextView
        android:text="@string/et_hint_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_text_view_clases"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/widget_img_view"
        android:layout_toRightOf="@+id/widget_img_view"
        android:layout_toEndOf="@+id/widget_img_view"
        android:layout_marginBottom="10dp" />

</RelativeLayout>