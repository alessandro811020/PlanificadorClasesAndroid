<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondo_item">

    <TextView
        android:text="@string/clase"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/item_tv_claseNombre"
        android:layout_alignTop="@+id/item_iv_foto"
        android:layout_toRightOf="@+id/item_iv_foto"
        android:layout_toEndOf="@+id/item_iv_foto" />

    <TextView
        android:text="@string/clase"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_tv_classSubNombre"
        android:layout_alignBottom="@+id/item_iv_foto"
        android:layout_alignLeft="@+id/item_tv_claseNombre"
        android:layout_alignStart="@+id/item_tv_claseNombre"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="@string/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_id" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/item_iv_foto"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/tv_id"
        android:layout_toRightOf="@+id/tv_id"
        android:layout_toEndOf="@+id/tv_id" />
</RelativeLayout>